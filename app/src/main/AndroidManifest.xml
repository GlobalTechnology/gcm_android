<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.expidev.gcmapp" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name=".GcmApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.SettingsActivity"
            android:label="@string/title_activity_settings"/>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="sensorPortrait"
            android:label="@string/title_activity_main">
        </activity>
        <activity
            android:name=".JoinMinistryActivity"
            android:label="@string/title_activity_join_ministry"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        
        <activity
            android:name=".MapSettings"
            android:label="@string/title_activity_map_settings"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.expidev.gcmapp.MainActivity" />
        </activity>

        <activity
            android:name=".MeasurementsActivity"
            android:label="@string/title_activity_measurements"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.expidev.gcmapp.MainActivity" />
        </activity>

        <activity
            android:name=".MeasurementDetailsActivity"
            android:label="@string/title_activity_measurement_details"
            android:parentActivityName=".MeasurementsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.expidev.gcmapp.MeasurementsActivity" />
        </activity>

        <activity-alias
            android:name="com.expidevapps.android.measurements.activity.MainActivity"
            android:targetActivity=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity-alias>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_api_key" />

        <receiver android:name=".Sync.ConnectionBroadcastReceiver" >
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHAGE" />
            </intent-filter>
        </receiver>

        <service android:name=".service.MeasurementsService"
                 android:exported="false"/>
        <service android:name=".service.MinistriesService"
                 android:exported="false"/>
        <service android:name=".service.TrainingService"
                 android:exported="false" />

    </application>

</manifest>
